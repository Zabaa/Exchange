@model Exchange.ViewModel.Auction.AuctionViewModel

@{
    ViewBag.Title = "Szczegóły aukcji";
}

<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">New message</h4>
    </div>
    <div class="modal-body">
        <form>
            <div class="form-group">
                @*<label for="recipient-name" class="control-label">Recipient:</label>
                    <input type="text" class="form-control" id="recipient-name">*@

                @Html.LabelFor(model => model.Name)
                @Html.EditorFor(model => model.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Name)
            </div>
            <div class="form-group">
                @*<label for="message-text" class="control-label">Message:</label>
                    <textarea class="form-control" id="message-text"></textarea>*@

                @Html.LabelFor(model => model.Name)
                @Html.EditorFor(model => model.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Name)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.OpenPrice)
                @Html.EditorFor(model => model.OpenPrice, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.OpenPrice)
            </div>
        </form>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Zamknij</button>
    </div>
</div>
